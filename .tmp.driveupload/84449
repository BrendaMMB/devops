name: CI/CD Pull-Request Automatic & Merge

on:
  workflow_dispatch:

jobs:
  trigger_ci_cd:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Configura Git
        run: |
          git config user.name "github-actions"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"

      - name: Cria ou atualiza branch ci_cd_formativa_w3
        run: |
          git checkout -b ci_cd_formativa_w3 || git checkout ci_cd_formativa_w3
          git add .github/workflows/github-actions.yml .github/workflows/github-actions-cd.yml
          git commit -m "feat(ci-cd): atualiza workflows CI/CD" || echo "Sem alterações para commitar"
          git push https://x-access-token:${{ secrets.GH_PAT }}@github.com/${{ github.repository }} ci_cd_formativa_w3

      - name: Instala GitHub CLI
        uses: cli/cli-action@v2

      - name: Cria Pull Request automaticamente
        run: |
          gh pr create \
            --title "Atualização dos Workflows CI/CD" \
            --body "Este PR atualiza os arquivos de CI/CD no repositório." \
            --base main \
            --head ci_cd_formativa_w3 \
            --repo ${{ github.repository }} || echo "PR já existe ou erro ignorado"
        env:
          GH_TOKEN: ${{ secrets.GH_PAT }}

      - name: Aguarda GitHub registrar o PR e acionar CI
        run: |
          echo "Esperando GitHub acionar o CI..."
          sleep 30

      - name: Aguarda execução e conclusão dos testes CI
        run: |
          echo "Aguardando checks (CI) finalizarem..."
          gh pr checks ci_cd_formativa_w3 --watch --repo ${{ github.repository }}
        env:
          GH_TOKEN: ${{ secrets.GH_PAT }}

      - name: Faz merge automático
        run: |
          gh pr merge ci_cd_formativa_w3 \
            --merge \
            --admin \
            --repo ${{ github.repository }}
        env:
          GH_TOKEN: ${{ secrets.GH_PAT }}
